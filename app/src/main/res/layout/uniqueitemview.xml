<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="200dp"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:src="@drawable/temp_img"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        >

    <ImageView
        android:id="@+id/flag"
        android:layout_width="192dp"
        android:layout_height="176dp"
        android:layout_margin="5dp"
        android:padding="7dp"
        android:scaleType="centerCrop"/>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ivImg"
        android:orientation="vertical"
        android:padding="5dip" >


         <TextView android:id="@+id/autorlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autorlabel" />

        <TextView
            android:id="@+id/autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/autorlabel" />

        <TextView
            android:id="@+id/comentalabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autorlabel"
            android:text="@string/comentalabel" />

        <TextView
            android:id="@+id/comenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autor"
            android:layout_toRightOf="@+id/comentalabel" />

        <TextView
            android:id="@+id/scorelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comentalabel"
            android:text="@string/scorelabel" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comenta"
            android:layout_toRightOf="@+id/scorelabel" />
    </LinearLayout>

